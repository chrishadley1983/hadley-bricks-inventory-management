{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "framework": "nextjs",
  "buildCommand": "cd apps/web && npm run build",
  "outputDirectory": "apps/web/.next",
  "installCommand": "npm install",
  "crons": [
    {
      "path": "/api/cron/minifigs/daily-inventory",
      "schedule": "0 6 * * *"
    },
    {
      "path": "/api/cron/minifigs/research-refresh",
      "schedule": "0 7 * * *"
    },
    {
      "path": "/api/cron/minifigs/poll-ebay-orders",
      "schedule": "*/15 * * * *"
    },
    {
      "path": "/api/cron/minifigs/poll-bricqer-orders",
      "schedule": "*/15 * * * *"
    },
    {
      "path": "/api/cron/minifigs/reprice",
      "schedule": "0 8 * * 1"
    }
  ]
}
