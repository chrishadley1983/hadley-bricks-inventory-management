# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# AI Providers
ANTHROPIC_API_KEY=your_anthropic_api_key
GOOGLE_AI_API_KEY=your_google_ai_api_key

# Google Sheets Integration
# To set up:
# 1. Go to Google Cloud Console (https://console.cloud.google.com)
# 2. Create a new project or select existing one
# 3. Enable the Google Sheets API
# 4. Create a Service Account (IAM & Admin > Service Accounts)
# 5. Generate a JSON key for the service account
# 6. Share your Google Sheet with the service account email (as Editor)
# 7. Copy the service account email and private key below
GOOGLE_SERVICE_ACCOUNT_EMAIL=your-service-account@your-project.iam.gserviceaccount.com
GOOGLE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour private key here\n-----END PRIVATE KEY-----\n"
GOOGLE_SHEETS_ID=1pmfxrFF4U08gXzsZOd49z4gbmmRHDrE_S8Vb6JqCMnU

# Migration Feature Flags
ENABLE_SHEETS_WRITE=true

# Credentials Encryption
# Required for encrypting platform credentials stored in the database
# Generate a secure random string (at least 32 characters)
# IMPORTANT: Once set, do not change this key or stored credentials will become unreadable
CREDENTIALS_ENCRYPTION_KEY=your-secure-encryption-key-here

# eBay Integration (OAuth 2.0)
# To set up:
# 1. Go to eBay Developer Program (https://developer.ebay.com)
# 2. Create an application in your developer account
# 3. Configure OAuth settings with the redirect URI below
# 4. Copy the App ID (Client ID) and Cert ID (Client Secret)
# 5. Set up your RuName (redirect URL name) in the eBay Developer Portal
EBAY_CLIENT_ID=your_ebay_client_id
EBAY_CLIENT_SECRET=your_ebay_client_secret
EBAY_REDIRECT_URI=http://localhost:3000/api/integrations/ebay/callback
# Set to 'true' to use eBay Sandbox environment for testing
EBAY_SANDBOX=false

# Amazon SP-API Integration
# To set up:
# 1. Register as a developer in Amazon Seller Central
# 2. Create an SP-API application
# 3. Authorize the application to access your seller account
# 4. Copy the credentials below
AMAZON_SP_CLIENT_ID=your_amazon_client_id
AMAZON_SP_CLIENT_SECRET=your_amazon_client_secret
AMAZON_SP_REFRESH_TOKEN=your_amazon_refresh_token
AMAZON_SELLER_ID=your_amazon_seller_id
# EU marketplace IDs (comma-separated): UK, DE, FR, IT, ES
AMAZON_MARKETPLACE_IDS=A1F83G8C2ARO7P,A1PA6795UKMFR9,A13V1IB3VIYBER,APJ6JRA9NG5V4,A1RKKUPIHCS9HS

# Vercel Cron Jobs
# Required for securing cron job endpoints (negotiation automation, amazon sync, etc.)
# Vercel automatically sends this as Bearer token in Authorization header
# Generate with: openssl rand -hex 32
# IMPORTANT: Must be set in Vercel Environment Variables for production
CRON_SECRET=your_cron_secret_here
